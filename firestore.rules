rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /tables/{tableId} {
      allow read: if true;
      allow create, delete: if true;
      allow update: if !request.resource.data.keys().hasAny(['currentHandId']) &&
        (
          !request.resource.data.keys().hasAny(['nextVariantId']) ||
          (request.auth != null && request.auth.uid == resource.data.nextDealerId)
        );

      match /seats/{playerId} {
        allow read: if true;
        allow write: if true;
      }

      match /hands/{handId} {
        allow read: if true;
        allow write: if false;
      }
    }
  }
}
